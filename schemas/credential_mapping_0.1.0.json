{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bookish Credential Mapping",
  "description": "Maps username+password derived lookup key to encrypted seed on Arweave",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "credential-mapping"
    },
    "version": {
      "type": "string",
      "const": "0.1.0"
    },
    "seed": {
      "type": "string",
      "description": "12-word BIP39 seed phrase (plaintext inside encrypted envelope)"
    },
    "displayName": {
      "type": "string",
      "description": "User's chosen display name"
    },
    "createdAt": {
      "type": "integer",
      "description": "Unix timestamp of account creation"
    }
  },
  "required": ["schema", "version", "seed", "displayName", "createdAt"],
  "additionalProperties": true
}
